{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "GDP per Capita by Country (2019)",
    "data": {
      "url": "https://raw.githubusercontent.com/kzev0001/FIT3179/main/Visualisation/Dataset/2019.csv",
      "format": {"type": "csv"}
    },
    "width": {"step": 15},
    "mark": {
      "type": "bar",
      "tooltip": true,
      "cornerRadiusTopLeft": 3, 
      "cornerRadiusTopRight": 3 
    },
    "encoding": {
      "x": {
        "field": "Country or region",
        "type": "ordinal",
        "axis": {
          "title": "Country", 
          "labelAngle": -45,
          "labelFontSize": 10,
          "titleFontSize": 12
        },  
        "sort": "-y"  
      },
      "y": {
        "field": "GDP per capita",
        "type": "quantitative",
        "axis": {
          "title": "GDP per Capita",
          "labelFontSize": 10,
          "titleFontSize": 12
        }
      },
      "color": {
        "field": "GDP per capita",
        "type": "quantitative",
        "scale": {
          "scheme": "viridis"
        },
        "legend": {
          "title": "GDP per Capita"
        }
      },
      "tooltip": [ 
        {"field": "Country or region", "type": "ordinal"},
        {"field": "GDP per capita", "type": "quantitative"}
      ]
    },
    "config": {
      "background": "#F5F5F5",
      "bar": {
        "binSpacing": 1,
        "continuousBandSize": 10
      },
      "view": {
        "stroke": "transparent"
      }
    }
}

  